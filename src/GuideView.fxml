<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ClientController">
         <center>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <TextField fx:id="lengthTextField" maxHeight="-Infinity" maxWidth="-Infinity" promptText="Din längd (cm)">
                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin></TextField>
                  <Label text="Din ålder" />
                  <ListView fx:id="ageListView" maxHeight="-Infinity" maxWidth="-Infinity" onMouseClicked="#onAgeListInteraction" prefHeight="75.0" prefWidth="200.0" VBox.vgrow="NEVER">
                     <padding>
                        <Insets bottom="10.0" />
                     </padding></ListView>
                  <Label text="Stil" />
                  <ListView fx:id="styleListView" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="50.0" prefWidth="200.0" VBox.vgrow="NEVER">
                     <padding>
                        <Insets bottom="10.0" />
                     </padding></ListView>
               </children>
               <BorderPane.margin>
                  <Insets bottom="20.0" left="20.0" top="20.0" />
               </BorderPane.margin>
            </VBox>
         </center>
         <top>
            <Label text="Din skidlängd" wrapText="true" BorderPane.alignment="CENTER">
               <font>
                  <Font name="Calibri Light" size="25.0" />
               </font>
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin></Label>
         </top>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
   <right>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
                  <Label fx:id="recommendLabel" text="Ange info för att rekommendera längd" />
                  <Button fx:id="confirmButton" layoutX="35.0" layoutY="45.0" mnemonicParsing="false" onAction="#onConfirmButtonPressed" text="Rekommendera Längd" textAlignment="CENTER" />
         </children>
      </AnchorPane>
   </right>
</BorderPane>
